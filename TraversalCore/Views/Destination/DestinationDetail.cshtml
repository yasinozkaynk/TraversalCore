@model Entity.Concrete.Destination
@{
    ViewData["Title"] = "DestinationDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<body id="body">
    <section class="single-product">
        <div class="container">
            <div class="row mt-20">
                <div class="col-md-5">
                    <div class="single-product-slider">
                        <div id='carousel-custom' class='carousel slide' data-ride='carousel'>
                            <div class='carousel-outer'>
                                <div class='carousel-inner '>
                                    <div class='item active'>
                                        <img src='@Model.FirstImage' alt='' data-zoom-image="images/shop/single-products/product-1.jpg" />
                                    </div>
                                    <div class='item'>
                                        <img src='@Model.Image' alt='' data-zoom-image="images/shop/single-products/product-2.jpg" />
                                    </div>

                                    <div class='item'>
                                        <img src='@Model.CoverImage' alt='' data-zoom-image="images/shop/single-products/product-3.jpg" />
                                    </div>
                                </div>
                                <a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
                                    <i class="tf-ion-ios-arrow-left"></i>
                                </a>
                                <a class='right carousel-control' href='#carousel-custom' data-slide='next'>
                                    <i class="tf-ion-ios-arrow-right"></i>
                                </a>
                            </div>

                            <ol class='carousel-indicators mCustomScrollbar meartlab'>
                                <li data-target='#carousel-custom' data-slide-to='0' class='active'>
                                    <img src='@Model.FirstImage' alt='' />
                                </li>
                                <li data-target='#carousel-custom' data-slide-to='1'>
                                    <img src='@Model.CoverImage' alt='' />
                                </li>
                                <li data-target='#carousel-custom' data-slide-to='2'>
                                    <img src='@Model.Image' alt='' />
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="single-product-details">
                        <h2>@Model.City</h2>
                        <p class="product-price">@Model.Price</p>

                        <p class="product-description mt-20">
                            @Model.Description
                        </p>
                        <p class="product-description mt-20">
                            @Model.Details
                        </p>
                        <div class="product-quantity">
                            <span>Quantity:</span>
                            <div class="product-quantity-slider">
                                <input id="product-quantity" type="text" value="0" name="product-quantity">
                            </div>
                        </div>
                        <a href="cart.html" class="btn btn-main mt-20">Rezervasyon Yap</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="tabCommon mt-20">
                        <ul class="nav nav-tabs">
                            <li class=""><a data-toggle="tab" href="#reviews" aria-expanded="false">Yorumlar</a></li>
                        </ul>
                        <div class="tab-content patternbg">
                            <div id="details" class="tab-pane fade active in">
                                @await Component.InvokeAsync("_CommentList", new { id = ViewBag.i })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

