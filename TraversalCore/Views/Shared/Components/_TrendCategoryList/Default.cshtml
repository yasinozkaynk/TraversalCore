@using Entity.Concrete
@model List<Subcategory>



    <div class="row">
        <div class="title text-center">
            <h1 style="color: #ff3131; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Öne Çıkan Otel Kategorileri</h1>
        </div>
    </div>
    <div class="hero-slider">
        @foreach (var item in Model)
        {
            @if (item.Status == true)
            {
                <div class="slider-item th-fullpage hero-area" style="background-image: url(@item.Image);">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6 text-center">
                                <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">
                                    @item.CategoryName <br />   @item.Explanation
                                </h1>
                                <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="/Destination/Index/@item.Id">Ayrıntılar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
    </div>

