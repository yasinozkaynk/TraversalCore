@using Entity.Concrete
@model List<HotelTour>

<style>

    .content_box .content {
        display: none;
    }

        .content_box .content.active {
            display: block;
        }

        .content_box .content h2 {
            margin-bottom: 10px;
        }

    .tab_box {
        width: 100%;
        display: flex;
        justify-content: space-around;
        align-items: center;
        border-bottom: 2px solid rgb(229,229,229);
        font-size: 18px;
        position: relative;
    }

        .tab_box .tab_btn {
            font-size: 18px;
            font-weight: 600;
            color: #919191;
            background: none;
            border: none;
            padding: 18px;
            cursor: pointer;
        }

            .tab_box .tab_btn.active {
                font-size: 18px;
                font-weight: 600;
                background: none;
                border: none;
                padding: 18px;
                cursor: pointer;
                color: red;
            }

    .line {
        position: absolute;
        top: 62px;
        left: -90px;
        width: 120px;
        height: 5px;
        background-color: red;
        border-radius: 10px;
        -ms-scroll-translation: initial;
    }

</style>


<div class="container" style="position:relative;top:-100px;">
    <div class="row">
        <div class="title">
            <h1 style="color: #ff3131; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">En Çok Tercih Edilen Oteller</h1>
        </div>
        <div class="col-md-4" style="position:relative;left:100px;top:-20px;">
            <div class="tab_box">
                <button class="tab_btn">Antalya</button>
