@using TraversalCore.Models
@model CategoryViewModel

<section class="menu">
    <nav class="navbar navigation">
        <div class="container">
            <div class="navbar-header">
                <h2 class="menu-title">Main Menu</h2>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div id="navbar" class="navbar-collapse collapse text-center">
                <ul class="nav navbar-nav">
                    <li class="dropdown ">
                        <a href="/Default/Index">Anasayfa</a>
                    </li>
                    @foreach (var item in Model.Category)
                    {
                        <li class="dropdown dropdown-slide">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
                               role="button" aria-haspopup="true" aria-expanded="false">
                                @item.CategoryName <span class="tf-ion-ios-arrow-down"></span>
                            </a>
                            <div class="dropdown-menu">
                                <div class="row">
                                    @foreach (var itemm in Model.Subheading.Where(x => x.CategoryId == item.Id))
                                    {
                                        <div class="col-lg-6 col-md-6 mb-sm-3">
                                            <ul>

                                                <li class="dropdown-header">@itemm.SubheadingName</li>
                                                <li role="separator" class="divider"></li>
                                                @foreach (var subcategory in Model.Subcategory.Where(x => x.SubheadingId == itemm.Id))
                                                {
                                                    <li><a href="/Destination/Index/@subcategory.Id" >@subcategory.CategoryName</a></li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                    <li class="dropdown dropdown-slide">
                        <a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
                           role="button" aria-haspopup="true" aria-expanded="false">
                            Hakkımızda
                        </a>
                    </li>
                    <li class="dropdown dropdown-slide">
                        <a href="/Contact/Index" data-delay="350"
                           role="button" aria-haspopup="true" aria-expanded="false">
                            İletişim
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
</section>
