@model TraversalCore.Models.UserRegisterViewModel
@{
    ViewData["Title"] = "SingUp";
    Layout = "~/Views/Shared/_UILayout.cshtml";

}

<div class="signin-page account">
    <div class="container" >
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Kayıt OL</h2>
                    <form class="text-left" method="post">
                        <div class="form-group">
                            <input type="text" asp-for="Name" class="form-control" required placeholder="İsim">
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Surname" class="form-control" required placeholder="Soyisim">
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="UserName" class="form-control" required placeholder="Kullanıcı Adı">
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Mail" class="form-control" required placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Password" class="form-control"required placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" required placeholder="Password">
                        </div>
                        <div class="text-center">
                            <button  class="btn btn-main text-center">Kayıt Ol</button>
                        </div>
                    </form>
                    <p class="mt-20">Zaten bir hesabım var<a href="/Login/SingIn"> Giriş Yap</a></p>
                    <p><a href="forget-password.html"> Parolanızı mı unuttunuz</a></p>
                </div>
            </div>
        </div>
    </div>
</div>