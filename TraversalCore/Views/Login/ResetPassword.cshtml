@model TraversalCore.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_EntryLayout.cshtml";
}

<style>
    #kutu {
        height: 60px;
        border-radius: 7px;
    }
</style>


@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <strong>Başarılı !</strong> @TempData["success"]
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="block text-center">
                <b style="color:red;font-size:35px;font-family: 'Times New Roman', Times, serif" class="text-center">Şimdi</b>
                <b style="font-size:30px;font-family: 'Times New Roman', Times, serif" class="text-center">Şifrenizi Güncelleyin</b><br /><br />
                <form asp-controller="Login" asp-action="ResetPassword" class="text-left" method="post">
                    <div class="form-group">
                        <input id="kutu" type="password" asp-for="Password" class="form-control" required placeholder="Şİfre">
                        <span class="text-danger" asp-validation-for="Password"> </span>
                    </div>
                    <div class="form-group">
                        <input id="kutu" type="password" asp-for="ConfirmPassword" class="form-control" required placeholder="Şifre Tekrar">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"> </span>
                    </div>
                    <br />
                    <div class="text-center">
                        <button style="width:400px;color:white;background-color:red;border-radius:8px;" class="btn btn-main text-center">Şifre Yenile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>