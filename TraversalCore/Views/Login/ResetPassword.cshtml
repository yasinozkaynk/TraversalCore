@model TraversalCore.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">

</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.SuccessMessage
    </div>

}
<div class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h4 class="text-center">Şifrenizi Güncelleyin</h4>
                    <form asp-controller="Login" asp-action="ResetPassword" class="text-left" method="post">
                        <div class="form-group">
                            <input type="password" asp-for="Password" class="form-control" required placeholder="Şİfre">
                            <span class="text-danger" asp-validation-for="Password"> </span>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" required placeholder="Şifre Tekrar">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"> </span>

                        </div>
                        <div class="text-center">
                            <button class="btn btn-main text-center">Şifre Yenile</button>
                        </div>
                    </form>
                    <p class="mt-20">Zaten bir hesabım var<a href="/Login/SingIn"> Giriş Yap</a></p>
                    <p><a href="forget-password.html"> Parolanızı mı unuttunuz</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

