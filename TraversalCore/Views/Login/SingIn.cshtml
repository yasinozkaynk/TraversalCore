@model TraversalCore.Models.UserSignInViewModel

@{
    ViewData["Title"] = "SıngIn";
    Layout = "~/Views/Shared/_UILayout.cshtml";

}


<html lang="en">
<body id="body">

    <section class="signin-page account">
        <div  class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="block text-center">
                        <h2 class="text-center">Giriş Yapın</h2>
                        <form class="text-left" method="post">
                            <div class="form-group">
                                <input type="email" asp-for="username" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-main text-center">Giriş Yap</button>
                            </div>
                        </form>
                        <p class="mt-20">Bu sitede yenimisin ?<a href="/Login/SingUp"> Şimdi Kayıt Ol</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>