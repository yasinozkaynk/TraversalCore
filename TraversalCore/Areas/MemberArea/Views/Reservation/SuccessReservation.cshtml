@{
    ViewData["Title"] = "SuccessReservation";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ödeme Başarılı</title>
    <style>


        .success-container {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        .success-header {
            background-color: #28a745;
            color: #fff;
            padding: 20px;
        }

            .success-header h1 {
                margin: 0;
                font-size: 36px;
            }

        .success-icon {
            font-size: 80px;
            color: #28a745;
        }

        .success-content {
            padding: 30px;
        }

        .success-message {
            font-size: 18px;
            color: #333;
            margin-bottom: 20px;
        }

        .back-to-home {
            text-decoration: none;
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .back-to-home:hover {
                background-color: #218838;
            }
    </style>
</head>


<section style="position:relative;top:40px;">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="background-color:white;position:relative;left:250px;">
                <div class="success-container">
                    <div class="success-header">
                        <h1>Ödeme Başarılı!</h1>
                    </div>
                    <div class="success-content">
                        <div class="success-icon">&#10004;</div>
                        <p class="success-message">Ödemeniz başarıyla tamamlandı. Teşekkür ederiz!</p>
                        <a href="/Default/Index" class="back-to-home">Anasayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
