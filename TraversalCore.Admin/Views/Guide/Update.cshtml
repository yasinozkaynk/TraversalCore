@model Entity.Concrete.Guide
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Yeni Rehber Ekle</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="GuideID" />

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Ad Soyad</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="basic-default-name" asp-for="Name" placeholder="" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Instagram Url</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="basic-default-name" asp-for="InstagramUrl" placeholder="" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Twitter Url</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="basic-default-name" asp-for="TwitterUrl" placeholder="" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-message">Açıklama</label>
                        <div class="col-sm-10">
                            <textarea id="basic-default-message"
                                      class="form-control"
                                      asp-for="Description"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-phone">Görsel</label>
                        <div class="col-sm-10">
                            <input type="file"
                                   id="formFile"
                                   class="form-control phone-mask"
                                   asp-for="Image" />
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

