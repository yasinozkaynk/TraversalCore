@using Entity.Concrete
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h4 class="card-header">Tur Rotası</h4>
        <a class=" btn rounded-pill btn-primary" href="/Destination/AddDestination">Yeni Tur Rotası</a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>Statü</th>
                    <th>Sitede Gör</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.DestinationID</strong></td>
                        <td>@item.City</td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Capacity
                        </td>
                        @if (item.Status == true)
                        {
                            <td><span class="badge bg-label-primary me-1">@item.Status</span></td>

                        }
                        else
                        {
                            <td><span class="badge bg-label-danger me-1">@item.Status</span></td>

                        }
                        <td><a href="/Destination/DestinationDetail/@item.DestinationID" class="btn rounded-pill btn-outline-info">Sitede Gör</a></td>
                        <td><a href="/Destination/DeleteDestination/@item.DestinationID" class="btn rounded-pill btn-outline-danger">Sil</a></td>
                        <td><a href="/Destination/UpdateDestination/@item.DestinationID" class="btn rounded-pill btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>