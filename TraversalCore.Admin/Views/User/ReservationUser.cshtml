@using Entity.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h4 class="card-header">Kullanıcının Geçmiş Rezervasyonları</h4>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Misafir Ad Soyad</th>
                    <th>Rota</th>
                    <th>Kişi Sayısı</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>#</strong></td>
                        <td></td>
                        <td>
                            @item.Destination.City
                        </td>
                        <td>
                            @item.PersonCount
                        </td>
                        <td>@(((DateTime)item.ReservastionDate).ToString("dd-MMM-yyyy"))</td>

                        <td><a class="btn rounded-pill btn-outline-success">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
